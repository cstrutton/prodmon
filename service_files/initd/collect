#!/bin/sh /etc/rc.common
# Copyright (C) 2008 OpenWrt.org

USE_PROCD=1

START=95
STOP=01

start_service() {
    procd_open_instance prodmon-collect
    procd_set_param command bin/sh -c "cd /opt/prodmon; /usr/bin/python3 prodmon/plc_collect/main.py"
    procd_set_param respawn
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}